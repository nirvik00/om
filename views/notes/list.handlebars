<h1>List Handlebars</h1>

{{#each concepts}}
    <h2>{{title}}</h2>
    <p>{{details}}</p>

    <a href="/concepts/edit/{{id}}">Edit</a>

    <form method="post" action="/concepts/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
    </form>

    <br><br><br><br>

{{else}}
<p> no concepts in db </p>
{{/each}}